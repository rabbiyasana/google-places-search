{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react", // or "react-jsx" for React 17+
    "module": "ESNext",
    "target": "ESNext",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
